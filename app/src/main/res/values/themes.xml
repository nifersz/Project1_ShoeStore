<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Project1_ShoeStore" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDay</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.Project1_ShoeStore.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Theme.Project1_ShoeStore.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Project1_ShoeStore.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>